#!/usr/bin/env nix-shell
#! nix-shell -i sh --pure
#! nix-shell -p bat id3v2

case "$(printf "%s\n" "$1" | awk '{print tolower($0)}')" in
*.tgz | *.tar | *.zip | *.7z | *.gz | *.xz | *.lzma | *.bz | *.bz2 | *.bz3 | *.lz4 | *.sz | *.zst | *.rar | *.br) ouch l "$1" ;;
*.[1-8]) man "$1" | col -b ;;
*.o) nm "$1" ;;
*.mp3) id3v2 --list "$1" ;;
*) bat --color=always --style=plain --pager=never "$1" ;;
esac
exit 0

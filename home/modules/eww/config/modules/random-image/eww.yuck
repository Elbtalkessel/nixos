(defpoll random-image-path 
  :interval "300s" 
  :initial "/home/risus/.cache/wallpaper"
  "sh ~/.config/eww/modules/random-image/get-random-image.sh"
)

(defwindow random-image-window
  :monitor "0"
  :stacking "bg"
  :windowtype "normal"
  :wm-ignore true
  :geometry (geometry :width "10%" :height "10%")
  (random-image-widget)
)

(defwidget random-image-widget []
  (box
    :class "random-image-window"
    (image :path random-image-path)
  )
)


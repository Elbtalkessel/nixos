(defwindow tray-popup
  :monitor "0"
  :stacking "fg"
  :windowtype "dialog"
  :wm-ignore true
  :geometry (geometry 
    :x "0%" 
    :y "0%" 
    :height "500px"
    :width "100px"
    :anchor "bottom right"
  )
  (box
    :class "tray-popup"
    :vexpand false
    (systray
      :icon-size 20
      :spacing 5
      :orientation "v"
      :prepend-new true
      :space-evenly false
    )
  )
)
